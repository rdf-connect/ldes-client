{
  "compilerOptions": {
    "lib": [
      "es2023",
      "dom"
    ],
    "module": "esnext",
    "target": "es2022",
    "strict": true,
    // "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "lib/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    // "tests",
    "web"
  ]
}
